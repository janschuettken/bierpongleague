<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_category_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/region_game_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text_game_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_incorrect_password" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/region_game_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/region_game_info">

        <RelativeLayout
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/color_region_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/center"
            android:layout_alignBottom="@+id/region_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:background="@drawable/color_green_gradient" />

        <RelativeLayout
            android:id="@+id/color_region_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/center"
            android:layout_alignBottom="@+id/region_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:background="@drawable/color_red_gradient" />

        <RelativeLayout
            android:id="@+id/region_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/region_tem_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_player_first_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name_player_last_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/player"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name_player_b_first_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name_player_b_last_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/region_tem_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_player_c_first_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name_player_c_last_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/player"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name_player_d_first_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name_player_d_last_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/player"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imageView_crone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/ic_crown"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_score_team_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_crone"
                    android:layout_marginStart="3dp"
                    android:text="@string/zero"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/text_score_team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_crone_team_b"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp"
                    android:text="@string/zero"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/imageView_crone_team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_crown"
                    tools:ignore="ContentDescription" />


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/region_confirmGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/region_game_row"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_confirm_yes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/border_green"
                android:text="@string/confirm_right"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_confirm_no"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_red"
                android:text="@string/confirm_wrong"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/progress_confirm_region"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/progress_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <RelativeLayout
                android:id="@+id/progress_confirm_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@color/colorPrimary"></RelativeLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region_confirmGame"
        android:layout_marginTop="5dp"
        android:background="@drawable/settings_border" />
</RelativeLayout>